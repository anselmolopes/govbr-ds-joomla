<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
	<name>govbr-ds</name>
	<version>1.0</version>
	<creationDate>July 2022</creationDate>
	<author>Universidade Federal do Pará</author>
	<authorEmail>marcelo.alencar@ndae.ufpa.br</authorEmail>
	<description>Template baseado no Padrão Digital de Governo.</description>
	<inheritable>1</inheritable>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
	</files>
	<media destination="templates/site/govbr-ds" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</media>
	<positions>
        <position>top</position>
		<position>search</position>
		<position>breadcrumbs</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="largura" type="radio" layout="joomla.form.field.radio.switcher" default="0"
				label="Largura do conteúdo">
					<option value="0">Fixa</option>
					<option value="1">Fluida</option>
				</field>
				<field name="texto_licenca" type="textarea" label="Texto final a respeito da licença de uso" rows="1" cols="5"
					description="Apresentado no rodapé de todas as páginas. Manter vazio para deixar a mensagem padrão."
					default="Desenvolvido com o CMS de c&amp;oacute;digo aberto &lt;strong&gt;&lt;a aria-label=&quot;Desenvolvido por Comunidade Joomla&quot; href=&quot;https://www.joomla.org&quot;&gt;Joomla&lt;/a&gt;&lt;/strong&gt;."
					filter="raw" />
			</fieldset>
		</fields>
	</config>
</extension>
